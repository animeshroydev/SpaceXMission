<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp"
            android:layout_marginTop="8dp"
            android:layout_margin="12dp"
            app:contentPadding="3dp"
            android:layout_height="wrap_content">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:iss_auto_cycle="true"
            app:iss_period="1000"
            app:iss_error_image="@drawable/no_img"
            app:iss_delay="0"/>
        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                android:layout_marginTop="8dp"
                android:layout_margin="12dp"
                app:contentPadding="3dp"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/missionName"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_weight="50"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:textColor="@android:color/black"
                tools:text="Falcon"
                />


            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"
            app:contentPadding="3dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:layout_weight="50"
                android:id="@+id/launchSite"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                tools:text="Launch Site"
                android:textColor="@android:color/black" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/isSuccessful"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:layout_weight="50"
                android:layout_marginEnd="8sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:textColor="@android:color/black"
                tools:text="Is Successful" />


        </androidx.cardview.widget.CardView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"
            app:contentPadding="3dp"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/textDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="14sp"
                android:layout_weight="50"
                android:fontFamily="monospace"
                android:textColor="@android:color/black"
                tools:text="desc"
                android:layout_marginLeft="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"
            app:contentPadding="3dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/dateOfLaunch"
                android:layout_weight="50"
                android:layout_marginStart="8sp"
                android:layout_marginTop="5sp"
                android:textAlignment="textStart"
                android:layout_marginBottom="5sp"
                android:textStyle="bold"
                tools:text="Date"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/rocketName"
                android:layout_weight="50"
                android:layout_marginRight="8sp"
                android:textAlignment="textEnd"
                android:layout_marginTop="5sp"
                android:textStyle="bold"
                android:layout_marginBottom="5sp"
                tools:text="Date"
                android:textColor="@android:color/black" />


        </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</ScrollView>